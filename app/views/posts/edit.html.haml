%form{method: "post", action: post_path(@post), class: "form-horizontal"}
  %input{type: "hidden", name: "_method", value: "put"}
  %fieldset
    %legend Update a post
    %div{class: "control-group"}
      %label{for: "author_id", class: "control-label"} Author
      %div{class: "controls"}
        =select("post", "author_id", Author.all.map{|a| [a.name, a.id]}, {}, class: "span4")
    =render partial: "forms/text", locals: {object: @post, method: "title", label: "Title"}
    =render partial: "forms/textarea", locals: {object: @post, method: "body", label: "Body"}

    %div{class: "control-group"}
      %div{class: "controls"}
        %button{type: "submit", value: "Signup", class: "btn btn-primary"} Create
