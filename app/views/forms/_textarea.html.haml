%div{class: "control-group #{object.errors[method].empty? ? "" : "error"}"}
  %label{for: method, class: "control-label"}
    =label
  %div{class: "controls"}
    %textarea{id: method, name: "#{object.class.to_s.downcase}[#{method}]", class: "span4", rows: "10"}
      =object.send(method)
    -unless object.errors[method].empty?
      %span{class: "help-inline"}
        =object.errors[method].to_sentence
